{
  "name": "Page State Saver",
  "description": "Saves scroll state and visible text to a DB and reloads on page load.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "alarms"],
  "host_permissions": ["http://*/"],
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}